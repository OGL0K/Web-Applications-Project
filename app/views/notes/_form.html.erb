<%= form_for @note do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:" %>
      </h2>
      <ul>
        <% @note.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <b class="show">&nbsp;&nbsp;Song</b>
    <p>&nbsp;&nbsp;<%= @note.song.title %></p>
    <%= f.hidden_field :song_id, value: @note.song.id %>
  </div>
  <div class="field">
    <b class="show">&nbsp&nbsp;Note</b>
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
