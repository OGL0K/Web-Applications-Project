<h1>Listing notes</h1>
<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td>
          <%= note.song.title %>
        </td>
        <td>
          <%= note.title %>
        </td>
        <td>
          <%= link_to 'Show', note %>
        </td>
        <td>
          <%= link_to 'Edit', edit_note_path(note) %>
        </td>
        <td>
          <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
