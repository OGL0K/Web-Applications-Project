<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:" %>
      </h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <b class="show">&nbsp;&nbsp;Title</b>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <b class="show">&nbsp;&nbsp;Artist</b>
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <b class="show">&nbsp;&nbsp;Album</b>
    <%= f.text_field :album %>
  </div>
  <div class="field">
    <b class="show">&nbsp;&nbsp;Duration</b> 
    <%= f.text_field :duration %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
