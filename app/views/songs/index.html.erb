<h1 class="songheader">My Songs</h1>
<p class="songparagraph">Welcome to your songs. You can add, delete, add it to your favourites and even add notes to your songs. Have fun!</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>&nbsp;&nbsp;&nbsp;</th>
      <th>Artist</th>
      <th>&nbsp;&nbsp&nbsp;&nbsp;</th>
      <th>Album</th>
      <th>&nbsp;&nbsp;&nbsp;</th>
      <th>Duration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td>
          <%= song.title %>
        </td>
        <td>&nbsp;&nbsp;</td>
        <td>
          <%= song.artist %>
        </td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td>
          <%= song.album %>
        </td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td>
          <%= song.duration %>
        </td>
        <td>&nbsp;&nbsp;&nbsp;</td>
        <td>
          <%= link_to 'Show', song %>
        </td>
        <td>&nbsp;</td>
        <td>
          <%= link_to 'Edit', edit_song_path(song) %>
        </td>
        <td>&nbsp;</td>
        <td>
          <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Do you want to delete this song?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<li class="addsong">&nbsp; <%= link_to 'Add a Song', new_song_path %></li>
